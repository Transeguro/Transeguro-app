<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.transeguro.transeguroapp.foro">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            />

        <ImageView
            android:layout_weight="1.11"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="56dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:background="#FFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">


                <ImageButton
                    android:id="@+id/ib_acerca"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/ic_informes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ACERCA DE"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">


                <ImageButton
                    android:id="@+id/ib_conductores"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/ic_conductor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CONDUCTORES"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">


                <ImageButton

                    android:id="@+id/ib_rutas"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/ic_rastro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="RUTAS"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#10ddf9"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">


                <ImageButton
                    android:id="@+id/imagelista"

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@mipmap/ic_x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CONDUCTORES X VEHICULOS X RUTAS"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="60dp"
        android:paddingTop="40dp"
        android:textColor="#FFF"
        android:text=" FORO"
        android:textSize="55dp"
        android:drawableRight="@mipmap/ic_foroprinc"
        android:drawablePadding="10dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="36dp"
        android:paddingRight="16dp"
        android:paddingTop="-25dp"
        android:layout_marginTop="436dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="20dp"
        android:background="#00eaff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="58dp"
            android:textColor="#000000"
            android:text=" OTRAS SUGERENCIAS"
            android:textStyle="bold"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/ib_otras"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="120dp"
            android:background="@mipmap/ic_foro" />
    </LinearLayout>
</RelativeLayout>

